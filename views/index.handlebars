<div class = "container">

  <div class = "row">

    <div class = "col-xs-12 text-center" id = "top-bar">
      <h1>
        Eat Da Burger
      </h1>
    </div> {{!-- end of class = "col-xs-12 text-center" id = "top-bar" --}}

    <div class = "col-xs-6 text-center" class = "task">

      <div class = "row">

        {{#each burger_data}}
          {{#unless this.devoured}}

          <div class = "col-xs-9 text-center">
            <pre> {{this.id}}.{{this.burger_name}} </pre>
          </div> {{!-- end of class = "col-xs-9 text-center" --}}
          <div class = "col-xs-3 text-center">
            <form method = "POST" action = "/burgers/update?_method=PUT" class = "button-size" >
              <input type="hidden" name="burger_id" type="text" value = {{this.id}}>
              <br>
              <button type = "submit" class = "btn btn-default">
                Devour
              </button>
            </form> {{!-- end of method = "POST" --}}

          </div> {{!-- end of class = "col-xs-3 text-center" --}}

      {{/unless}}
      
      {{/each}}

      </div> {{!-- end of class = "row" --}}

    </div> {{!-- end of class = "col-xs-6 text-center" class = "task" --}}

    <div class = "col-xs-6 text-center" class = "task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class = "form-control" type = "text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div> {{!-- end of class = "col-xs-6 text-center" class = "task" --}}

  </div> {{!-- end of class = "row" --}}

</div> {{!-- end of class = "container" --}}

<div class="container">

  <div class="row">

    <div class="col-xs-12 text-center enter_section">

    <form action="/burgers/create" method="POST">

      <input type="text" name="burger_name" class="form-control" value="" id="enter_text">

      <button type="submit" class="btn btn-primary" id="text-enter-button">

        Submit

      </button>

    </form> {{!-- end of action="/burgers/create" method="POST" --}}

    <p>
      Enter a new burger.
    </p>

    </div> {{!-- end of "col-xs-12 text-center enter_section" --}}

  </div> {{!-- end of class="row" --}}

</div> {{!-- end of class="container" --}}

